<div class="container text-center">
    <div class="jumbotron"><h2 class="mb-3">🌌🍔FantasyBurgerVRdLUX🍔🌌</h2><h6>Your most delicious fantasies brought to...uh, text</h6></div>
    <div class="row mb-5">
        <div class="col-xs-12 col-sm-6">
            <h5>Waiting For You, Big Boy</h5>
            <ul class="list-group">
                {{#each burgers }} 
                    {{#unless this.devoured}}
                    <li class="list-group-item text-left">
                        {{this.burger_name}}
                        <button data-name="{{this.burger_name}}" class="btn btn-primary float-right eat-button">
                            Eat Me
                        </button>
                    </li>
                    {{/unless}} 
                {{/each}}
            </ul>
        </div>
        <div class="col-xs-12 col-sm-6">
            <h5>The Deed is Done</h5>
            <ul class="list-group text-right">
                {{#each burgers }} 
                    {{#if this.devoured}}
                    <li class="list-group-item">{{this.burger_name}}</li>
                    {{/if}} 
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <textarea class="form-control mb-3 text-center" placeholder="Yo, tell me what you want, what you really really want in a burger"></textarea>
            <br>
            <button class="btn btn-warning" id="burgerSubmit">BURGERIFY</button>
        </div>
    </div>
</div>